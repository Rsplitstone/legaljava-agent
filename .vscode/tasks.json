{
   "version": "2.0.0",
   "tasks": [
      {
         "label": "javac build",
         "type": "shell",
         "command": "javac",
         "args": [
            "-d",
            "bin",
            "src/**/*.java"
         ],
         "group": { "kind": "build", "isDefault": true }
      },
      {
         "label": "java run",
         "type": "shell",
         "command": "java",
         "args": [
            "-cp",
            "bin",
            "your.main.ClassName"
         ],
         "group": { "kind": "test", "isDefault": true },
         "dependsOn": "javac build"
      }
   ]
}
